{
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "types": [
            "node"
        ],
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ESNext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "baseUrl": ".",
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "rootDir": "./src",
        "outDir": "dist",
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules"
    ]
}